<h1>New Game</h1>


<ul>

  <% @letters.each do |letter| %>

  <li><%= letter %></li>

  <% end %>

</ul>

<h3>What's the longest word you can find?</h3>

<form class="form-inline" action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token  %>
  <%= hidden_field_tag :letters, @letters  %>
  <div class="form-group mx-sm-3 mb-2">
    <label for="word" class="sr-only">What's your guess</label>
    <input type="text" class="form-control" name="word">
  </div>
  <button type="submit" class="btn btn-primary mb-2">Play</button>
</form>
